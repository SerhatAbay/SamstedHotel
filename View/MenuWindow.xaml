<Window x:Class="SamstedHotel.View.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
      
        <Button Content="Værelses reservation"
                HorizontalAlignment="Left"
                Margin="50,50,0,0"
                VerticalAlignment="Top"
                Width="200"
                Height="50"
                Command="{Binding NavigateToRoomReservationCommand}" />

    
        <Button Content="Kursus lokale reservation"
                HorizontalAlignment="Left"
                Margin="50,120,0,0"
                VerticalAlignment="Top"
                Width="200"
                Height="50"
                Command="{Binding NavigateToCourseRoomReservationCommand}" />

     
        <Button Content="Se/slet reservationer"
                HorizontalAlignment="Left"
                Margin="50,190,0,0"
                VerticalAlignment="Top"
                Width="200"
                Height="50"
                Command="{Binding NavigateToViewDeleteReservationsCommand}" />
    </Grid>
</Window>
